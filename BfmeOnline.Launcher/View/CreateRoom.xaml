<Window x:Class="BfmeOnline.Launcher.CreateRoom"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BfmeOnline.Launcher"
        mc:Ignorable="d"
        Title="Create Room" Height="300" Width="300">
    <Border Padding="5">
        <StackPanel>
            <Label Content="Enter room name: " Margin="10 10 0 0"/>
            <TextBox Text="{Binding RoomView.RoomName, UpdateSourceTrigger=PropertyChanged}" Margin="10 5 10 0" />
            <Label Content="Enter room capacity" Margin="10 10 0 0"/>
            <TextBox Text="{Binding RoomView.Capacity}" Margin="10 5 10 0" />
            <Label Content="Enter room description" Margin="10 10 0 0"/>
            <TextBox Text="{Binding RoomView.Description}" Margin="10 5 10 0" />
            <Button Content="Create" Command="{Binding CreateRoomCommand}" Margin="50"/>
        </StackPanel>
    </Border>
</Window>
