<Window x:Class="BfmeOnline.Launcher.View.Main"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:gif="https://github.com/XamlAnimatedGif/XamlAnimatedGif"
        xmlns:local="clr-namespace:BfmeOnline.Launcher.View"
        mc:Ignorable="d"
        Title="Main" Height="600" Width="800"
        WindowStyle="None" ResizeMode="NoResize"
        >
    <Window.Background>
        <ImageBrush ImageSource="/Resources/GUI/Main/Main.jpg"/>
    </Window.Background>
    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="60"></WindowChrome>
    </WindowChrome.WindowChrome>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"></ColumnDefinition>
            <ColumnDefinition Width="9*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="4*"></RowDefinition>
                <RowDefinition Height="9*"></RowDefinition>
                <RowDefinition Height="3*"></RowDefinition>
            </Grid.RowDefinitions>
            <Grid Grid.Row="1">
                <Grid.Background>
                    <ImageBrush ImageSource="/Resources/Images/buttonBackgrounds.png" Opacity="1"  Stretch="UniformToFill"/>
                </Grid.Background>
                <Image Source="/Resources/Images/vertLine.png" Panel.ZIndex="99" HorizontalAlignment="Right"></Image>
                <StackPanel>
                    <Button Margin="-12 0 10 0">
                        <Button.Template>
                            <ControlTemplate>
                                <Border>
                                    <Image x:Name="BFME" Source="/Resources/Images/bfme1Active.png" Opacity="1" Width="162" Height="125"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                    <Button Margin="-6 -21 10 0">
                        <Button.Template>
                            <ControlTemplate>
                                <Border>
                                    <Image Name="BFME" Source="/Resources/Images/bfme2Active.png" Opacity="0" Width="162" Height="125"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                    <Button Margin="1 -25 10 0">
                        <Button.Template>
                            <ControlTemplate>
                                <Border>
                                    <Image Name="BFME" Source="/Resources/Images/bfme3Active.png" Opacity="0" Width="162" Height="125"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>
            </Grid>
        </Grid>
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="2*"></RowDefinition>
                <RowDefinition Height="8*"></RowDefinition>
                <RowDefinition Height="2*"></RowDefinition>
            </Grid.RowDefinitions>
            <Grid Grid.Row="1">
                <Border BorderBrush="Black" Margin="-5 25 25 -10" Opacity="0.6" BorderThickness="500">
                </Border>
            </Grid>
            <StackPanel Grid.Row="2" Orientation="Horizontal">
                <ProgressBar Margin="15 35 15 35" Width="450"></ProgressBar>
                <Button Content="Install/Play" Margin="0 25 5 25" Width="150"></Button>
            </StackPanel>
        </Grid>
    </Grid>
